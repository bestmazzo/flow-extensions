{
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2020
  },
  "env": {
    "node": false,
    "es6": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "eol-last": ["error", "always"],
    "indent": ["error", 2, {"SwitchCase": 1}],
    "linebreak-style": ["error", "unix"],
    "no-console": 2,
    "no-fallthrough": 0,
    "no-multi-spaces": 2,
    "no-multiple-empty-lines": [ "error", {
      "max": 1,
      "maxEOF": 0,
      "maxBOF": 0
    } ],
    "no-undef": 2,
    "no-undef-init": 2,
    "no-use-before-define": 0,
    "quotes": ["error", "single"],
    "require-await": 2,
    "semi": ["error", "always"],
    "space-before-function-paren": ["error", {
      "anonymous": "always",
      "named": "never",
      "asyncArrow": "always"
    }],
    "unicode-bom": ["error", "never"]
  }
}
